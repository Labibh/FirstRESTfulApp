<%- include("partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Submit a Tech Review</h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/reviews/<%= review._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Article Title</label>
                    <input class="form-control" type="text" name="tech[title]" value="<%= review.title %>">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input class="form-control" type="text" name="tech[image]" value="<%= review.image %>">
                </div>
                <div class="form-group">
                    <label>Content</label>
                    <textarea class="form-control" name="tech[body]"><%= review.body %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>

<%- include("partials/footer") %>